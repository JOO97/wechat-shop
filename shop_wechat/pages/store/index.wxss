}

.img-box view {
  width: 95%;
height: 380rpx;
margin: auto;

}

.img-box image {
  height: 360rpx;
width: 100%;
margin-top:10rpx;
}

.name-box {
  padding-left: 30rpx;
margin-top: 15rpx;
font-size: 45rpx;
font-weight: 600;
margin-bottom: 15rpx;

}

.msg-box {
  padding:  15rpx 20rpx;
  text-overflow: ellipsis;
word-wrap: break-word;
margin: 10rpx 0;
background-color: #fff;
}

.info-list {
  /* width: 100%; */
padding: 10rpx 20rpx;
background-color: #fff;

}

.info-list view {
  padding: 25rpx 0;
  text-overflow: ellipsis;
word-wrap: break-word;
  border-bottom: 1rpx solid #F5F5F5;
  position: relative;


}

.info-list view text:first-child {
  margin-right: 10rpx; 
}

.info-list view text:nth-child(3) {
  position: absolute;
right: 6rpx;
top: 30rpx;

}

.store-title{
  /* white-space: nowrap; */
  display: inline-block;
  padding: 0 10rpx;

}

.scroll-x{
  /* width: 100%; */
  white-space: nowrap;
  padding: 0 10rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-bottom: 2rpx solid rgba(211,211,211, .6);

}

.title-box{
  /* white-space: nowrap; */
